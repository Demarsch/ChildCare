<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:registry="clr-namespace:Registry">
    <DataTemplate DataType="{x:Type registry:ScheduleEditorRecordTypeViewModel}">
        <Border BorderThickness="0 0 0 1" BorderBrush="LightGray">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name, Mode=OneTime}" Margin="3" HorizontalAlignment="Left" />
                <TextBox Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}" Margin="3" HorizontalAlignment="Stretch" />
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>