<fluent:RibbonTabItem x:Class="AdminModule.Views.AdminHeader"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:fluent="urn:fluent-ribbon"
                      xmlns:viewModels="clr-namespace:AdminModule.ViewModels"
                      mc:Ignorable="d"
                      d:DesignHeight="300"
                      d:DesignWidth="300"
                      d:DataContext="{d:DesignInstance viewModels:AdminViewModel}">
    <fluent:RibbonTabItem.Header>
        <TextBlock Text="Администрирование"
                   Style="{x:Null}" />
    </fluent:RibbonTabItem.Header>
    <fluent:RibbonGroupBox Header="Шаблоны" FontWeight="Medium">
        <fluent:Button x:Name="btnTemplates" Command="{Binding ReportTemplateCommand}" 
                       Header="Шаблоны отчетов" LargeIcon="pack://application:,,,/Core;Component/Resources/Images/Add48x48.png" />       
    </fluent:RibbonGroupBox>
</fluent:RibbonTabItem>