<Window x:Class="AdminTools.View.UserManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:AdminTools.View"
        Title="Редактор пользователей" WindowState="Maximized">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Пользователи" HorizontalAlignment="Center" />
        <Label Grid.Row="0" Grid.Column="2" Content="Структура групп пользователей и прав" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row = "0" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Right" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Width="5" Background="#FFBCBCBC"/>

        <uc:UserEditorView Grid.Row="1" Grid.Column="0" DataContext="{Binding UserEditorViewModel}"/>

        <uc:PermissionsTreeView Grid.Row="1" Grid.Column="2" DataContext="{Binding PermissionsTreeViewModel}"/>
    </Grid>
</Window>
